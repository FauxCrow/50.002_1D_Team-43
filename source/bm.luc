module bm (
    input a[32],  
    input b[32],  
    input alufn[2],  
    output masked[32] 
) {
    sig result[32]; 

    always {
        case (alufn) {
            b00:
                result = a & b;  
            b01:
                result = a | b;  
            b10:
                result = a ^ b;  
            b11:
                result = ~b;     
            default:
                result = 0;
        }
        masked = result
    }
}
